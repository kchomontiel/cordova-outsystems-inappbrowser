<?xml version='1.0' encoding='utf-8'?>
<plugin id="multibrowser" version="1.5.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>multibrowserplugin</name>
    <description>InAppBrowser OutSystems Cordova Plugin</description>
    <author>OutSystems Inc</author>
    
    <js-module name="HiddenInAppBrowser" src="dist/plugin.js">
        <clobbers target="cordova.plugins.HiddenInAppBrowser" />
        <clobbers target="HiddenInAppBrowser" />
    </js-module>
    
    <platform name="android">
        <dependency id="cordova-plugin-inappbrowser" />
        
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="HiddenInAppBrowser">
                <param name="android-package" value="com.outsystems.plugins.inappbrowser.osinappbrowser.HiddenInAppBrowser" />
            </feature>
            <preference name="GradlePluginKotlinEnabled" value="true" />
            <preference name="GradlePluginKotlinCodeStyle" value="official" />
            <preference name="AndroidXEnabled" value="true"/>
        </config-file>
        
        <source-file src="src/android/HiddenInAppBrowser.kt" target-dir="app/src/main/kotlin/com/outsystems/plugins/inappbrowser/osinappbrowser" />
    </platform>
    
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="HiddenInAppBrowser">
                <param name="ios-package" value="HiddenInAppBrowser" />
            </feature>
            <preference name="SwiftVersion" value="5" />
        </config-file>

        <source-file src="src/ios/HiddenInAppBrowser.swift" />
        <source-file src="src/ios/HiddenInAppBrowserInputArgumentsModel.swift" />
        
        <config-file parent="/*" target="config.xml">
            <preference name="WKWebViewOnly" value="true" />
            <preference name="AllowInlineMediaPlayback" value="true" />
        </config-file>
    </platform>
</plugin>
